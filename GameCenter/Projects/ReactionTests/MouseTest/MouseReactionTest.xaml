<Window x:Class="GameCenter.Projects.ReactionTests.MouseTest.MouseReactionTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MouseReactionTest" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid x:Name="ScoreGrid">
            <TextBlock x:Name="ScoreTextBlock" Foreground="Green" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Text="Score: 0"/>
        </Grid>
        <Grid x:Name="GameGrid"/>
        <TextBlock x:Name="GameOverText" Foreground="White" Background="Black" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Margin="0,-70,0,0"/>
        <Button x:Name="NewGameButton" Content="New Game" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,70,0,0" Visibility="Collapsed" Click="NewGameButton_Click"/>
    </Grid>
</Window>
